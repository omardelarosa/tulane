    body
        nav.navbar.navbar-default.navbar-fixed-top
            .navbar-header
                button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                    i.icon-bar
                    i.icon-bar
                    i.icon-bar
                img.tulane-logo(src='/img/logo-nofill.gif')
            .collapse.navbar-collapse
                #controls.navbar-left
                    button.btn.btn-default.navbar-btn.settings(type="button")
                        i.icon-cog
                    | &nbsp;
                    button.btn.btn-default.navbar-btn.pause-resume(type="button")
                        i.icon-pause
                    | &nbsp;
                    button.btn.btn-default.navbar-btn.fullscreen(type="button")
                        i.icon-expand
                .navbar-right
                    #signin.hidden
                        button.btn.btn-default.navbar-btn(type="button")
                            | Sign in with Twitter
                    #signout.hidden
                        p.navbar-text(data-text="Hello {screen_name}")
                        | &nbsp;
                        button.btn.btn-default.navbar-btn(type="button")
                            | Sign out

        .fontana
            - messages = []
            - messages.push("Welcome to the brand new Twitter Fontana! Completely revamped to work with Twitter's API v1.1. Sign in with your Twitter account to display your own Twitter searches.")
            - messages.push("There are several transition effects and themes to choose from. Click the cog icon <i class='icon-cog'></i> in the top bar and customise the way Twitter Fontana visualizes Tweets.")
            - messages.push("A real time fullscreen Twitter wall that uses modern web technology: #js, #html5 & #css3! No Flash! It works in all modern browser and even mobile devices like your iPad.")
            - messages.push("Completely free & open source. So when you are feeling creative you can create a Twitter wall just the way you like it!")
            - messages.push("Haven't got the time or powress to DIY, but still want a customized Twitter Wall with your own branding or extra features? Contact us @tweetfontana, we'd love to help!")
            each message, i in messages
                div.message.media.well.col-md-6.col-md-offset-3.hidden(id='msg'+i)
                    figure.pull-left.media-object
                        img.avatar.img-thumbnail(src="/img/avatar.png", width="64", height="64", alt="")
                    .media-body
                        .media-heading
                            cite
                                span.name Tweet Fontana
                                small.text-muted
                                    span.screen_name @tweetfontana
                                    span.time.pull-right Just now
                    .text.lead= message

        .progress.progress-striped.active
            .progress-bar

        #logos.well.well-sm
            button.close(type="button") &times;
            span
                img.tulane-shield(src='/img/shield.gif')
            a.tulane-hashtag(href='https://twitter.com/hashtag/tulaneconnect?src=tren')
                | #tulaneconnect 

        script(src="/js/lib.min.js")
        script(src="/bootstrap/js/bootstrap.min.js")
        script(src="/js/twitterfontana.min.js")
        script(src="/js/demo.min.js")
